@import "../../style/base.styl"

$top-container-height = 60rem
$left-side-width = 80rem

.main-container {
  position absolute
  box-sizing border-box
  width 100%
  height 100%
  background var(--second-background-color)
  font-size 15rem

  .top-container {
    position relative
    box-sizing border-box
    width 100%
    height $top-container-height
  }


  .bottom-container {
    position relative
    box-sizing border-box
    width 100%
    height 'calc(100% - %s)' % $top-container-height
    padding-top $component-interval

    .bottom-content {
      position relative
      box-sizing border-box
      width 100%
      height 100%
      padding-left $left-side-width


      .left {
        position absolute
        box-sizing border-box
        width $left-side-width
        height 100%
        top 0
        left 0
      }


      .right {
        position relative
        width 100%
        height 100%
        box-sizing border-box
        padding 0 $component-interval 0 $component-interval


        .content {
          position relative
          box-sizing border-box
          width 100%
          height 100%
        }
      }

    }


  }
}
